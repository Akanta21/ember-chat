<div class="container-fluid">
  <div class="col-lg-10 col-md-10 col-sm-10 pull-right">

    <form class="form-inline pull-right" {{action "submitMessage" on="submit"}}>
      <div class="form-group">
        {{input value=message class="form-control" placeholder="Message"}}
      </div>
      <div class="form-group">
        {{input value=name class="form-control" placeholder="Name"}}
      </div>
      <button type="submit" class="btn btn-primary">Send Message</button>
    </form>

    <div id="message"></div>
  </div>
</div>
